<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/discussion_layout"
    android:layout_width="400dp"
    android:layout_height="600dp"
    tools:context=".MainUIElements.CreateDiscussionFragment">

    <TextView
        android:id="@+id/discussion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="@string/discussion_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/edit_discussion_title"
        android:layout_marginStart="96dp"
        android:layout_marginTop="30dp"
        android:id="@+id/discussion_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discussion_details"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="301dp" />

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/discussion_title"
        android:layout_marginStart="96dp"
        android:id="@+id/edit_discussion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="title"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="226dp" />

    <EditText
        android:id="@+id/edit_discussion_details"
        android:layout_marginStart="96dp"
        app:layout_constraintTop_toBottomOf="@+id/discussion_details_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textLongMessage"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="332dp" />

    <Button
        android:id="@+id/cotinue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="92dp"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_discussion_details" />

</androidx.constraintlayout.widget.ConstraintLayout>