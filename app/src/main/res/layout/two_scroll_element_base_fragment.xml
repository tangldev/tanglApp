<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoScrollElementsFragment">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/search_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"></LinearLayout>


    <LinearLayout
        android:id="@+id/top_scroll_segment"
        app:layout_constraintTop_toBottomOf="@id/search_segment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/top_scroll_segment"
        android:layout_marginTop="8dp"
        android:id="@+id/bottom_scroll_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>